class ImageLibrary {
	constructor() {
		this.images = {};
	}
	
	function get(path) {
		img = this.images.get(path, null);
		if (img == null) {
			rpath = 'images/' + path;
			$gfx_image_load_from_resource('t', rpath);
			img = $gfx_image_get('t');
			this.images[path] = img;
		}
		return img;
	}
}

IMAGES = new ImageLibrary();